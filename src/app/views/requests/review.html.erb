
<h3>申請内容</h3>
<div class="request_form_element">
<table>
<% @forms.each do |form| %>
  <tr>
  <th><%= form.name %></th>
  <!--- <td><%= sanitize(form.value.gsub("\n","<br>")) unless form.value.nil? %></td> -->
  <td><%= review_text form %></td>
  </tr>
<% end %>
</table>
</div>

<h3>申請経路</h3>
 
<div class="request_workflow_element">
<table>
<% @steps.each do |step| %>
  <tr>
    <th style="width: 2em"><%= step.flow_step %></th> 
    <th><%= step.name %><br><%= "(#{step.approve_type})" %></th> 
    <td>
    <% @workflows.where(flow_step: step.flow_step).each do |workflow| %>
      <table>
      <tr>
      <td style="width: 2em"><%= approval_character workflow %></td>
      <td><%= username workflow.user %></td>
      <td><%= " : " + workflow.comment unless workflow.comment.blank? %></td>
      </tr>
      </table>
    <% end %>
    </td>
  </tr>
<% end %>
</table>
</div>

<% if @request.in_progress == true %>
<%= form_for :request, url: submit_request_path do |f| %>
<h3>コメント</h3>
<div class="request_form_element">
<table>
<tr>
  <th>名前</th>
  <td><%= username @user %></td>
</tr>
<tr>
  <th>コメント</th>
  <td><%= f.text_area 'comment' , value: "" , placeholder: 'コメントを入力してください' %></td>
</tr>
</table>
</div>

<%= f.submit 'approve', name: 'commit' %>
<%= f.submit 'reject', name: 'commit' %>
<% end %>
<% end %>
